<p id="notice"><%= notice %></p>

<h1>Listing Users Courses</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Course</th>
      <th>Buffer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users_courses.each do |users_course| %>
      <tr>
        <td><%= users_course.user %></td>
        <td><%= users_course.course %></td>
        <td><%= users_course.buffer %></td>
        <td><%= link_to 'Show', users_course %></td>
        <td><%= link_to 'Edit', edit_users_course_path(users_course) %></td>
        <td><%= link_to 'Destroy', users_course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

